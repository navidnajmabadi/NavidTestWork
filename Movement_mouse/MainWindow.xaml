<Window x:Class="Movement_mouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movement_mouse"
        mc:Ignorable="d"
        Title="MouseMovment" Height="360.416" Width="726.042"  Name="wnd">


    <Grid>
        <Canvas Name="MyCanvas" Background="WhiteSmoke" MouseLeftButtonDown="MyCanvas_MouseLeftButtonDown">
            
        </Canvas>
        <StackPanel Width="100" HorizontalAlignment="Right">
            <TextBlock Text="Postion X: "/>
            <TextBox  Name="btn_x" Text="{Binding X1 , ElementName=Line,UpdateSourceTrigger=PropertyChanged }" Width="100"/>
            <TextBlock Text="Postion Y: "/>
            <TextBox  Name="btn_y" Text="{Binding Y1 , ElementName=Line,UpdateSourceTrigger=PropertyChanged}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
